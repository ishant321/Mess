<%- include("partials/header.ejs") %>    

<div class="indexContainer" style="min-height: 100vh !important;">
  <div class="post-box" style="width: 70%;">
    <section class="w-9">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100" style="width: 100%;">
            <div class="col col-lg-9 col-xl-10" style="width: 60%">
              <div class="card">
                <div class="rounded-top text-white d-flex flex-row" style="background-color: #2f414e; height:200px;">
                  <div class="ms-4 mt-5 d-flex flex-column">
                    <img src="<%= user.profilephoto %>" class="img-fluid img-thumbnail mt-4 mb-2"
                      style="width: 9rem; min-height: 7.8rem; z-index: 1">
                    <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                      style="z-index: 1;">
                      Edit profile
                    </button>
                  </div>
                  <div class="ms-3" style="margin-top: 130px;">
                    <h5><%= user.name %></h5>
                    <p><%= user.hostel+" " %>Hostel</p>
                  </div>
                  <form action="/logout" method="post" class="ms-auto me-3">
                  <div style="margin-top: 130px;">
                    <button type="submit" class="btn btn-primary btn-md" style="padding-left: 2.5rem; background-color: white; color: black; padding-right: 2.5rem;">Logout</button>
                  </div>
                  </form>
                </div>
                <div class="p-4 text-black" style="background-color: #f8f9fa;">
                  <div class="d-flex justify-content-end text-center py-1">
                    
                </div>
                <div class="card-body p-4 text-black">
                  <div class="mb-5">
                  </div>
                  <div class="d-flex justify-content-between align-items-center mb-4">
                    <p class="lead fw-normal mb-0"><%= post.length %> complaints</p>
                    <p class="mb-0"><a href="#!" class="text-muted">Show all</a></p>
                  </div>
                  <% var i = 0; %>
                  <%  while(i < post.length) { %>
                    <div class="row g-2 w-75 m-auto">
                      <div class="col-12 mb-2">
                        <img src="<%= post[i].photo; %>" class="w-100 rounded-3 profile-post">
                        <p style="color: black;"><%= post[i].title; %></p><% i++; %> 
                      </div>
                    </div>
                  <% } %>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      </div>
</div>
<%- include("partials/footer.ejs") %> 