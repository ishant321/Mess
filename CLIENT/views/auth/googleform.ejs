  <form action="/googleform" method="post" enctype="multipart/form-data" class="signup row g-4 mx-auto m-4 needs-validation" novalidate style="background-color: rgb(85, 230, 227)">

    <div class="input-group mb-4" style="background-color: rgb(16, 93, 86); border-radius: 5px;">
      <div class="input-group-prependx">
        <img src="<%= user.profilephoto %>"
          alt="Generic placeholder image" class="img-fluid img-thumbnail m-2"
          style="width: 4rem; height: 4rem;">
      </div>
      <div class="m-3">
        <h5 class="mb-0"><%= user.name %></h5>
        <p class="mb-0"><%= user.email %></p>
      </div>
    </div>
    
    <div class="col-md-12">
      <label for="validationCustom04" class="form-label">Hostel</label>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Choose your hostel
      </div>
      <select class="form-select" id="validationCustom05" name="hostel" required>
        <option selected disabled value="">Choose your hostel</option>
        <option value="Raman">Raman</option>
        <option value="Patel">Patel</option>
        <option value="Malviya">Malviya</option>
        <option value="Tagore">Tagore</option>
        <option value="Tilak">Tilak</option>
      </select>
    </div>
    <div class="col-md-12">
      <label for="validationCustom06" class="form-label">Room no.</label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="Enter your room no." name="room" required>
      <div class="valid-feedback">
        Looks good.
      </div>
      <div class="invalid-feedback">
        Enter your room no.
      </div>
    </div>


